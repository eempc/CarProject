@page
@model CarProject.InquiryModel
@{
    ViewData["Title"] = "Inquiry";
}

<h1>Inquiry</h1>

<form class="form" method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Inquiry.StartDate" class="col-md-3 right">Start:</label>
        <input asp-for="Inquiry.StartDate" class="form-control" />
        <span asp-validation-for="Inquiry.StartDate"></span>
    </div>



    <div class="form-group">
        <label asp-for="Inquiry.EndDate" class="col-md-3 right">End:</label>
        <input asp-for="Inquiry.EndDate" class="form-control" />
        <span asp-validation-for="Inquiry.EndDate"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-lg btn-block mt-5" asp-page-handler="Update">Update</button>
    <button type="submit" class="btn btn-primary btn-lg btn-block mt-5" asp-page-handler="Next">Next</button>
</form>


<p>Your start date:</p>
<p>@Model.Inquiry.StartDate</p>

<p>Your end date:</p>
<p>@Model.Inquiry.EndDate</p>

<p>Total of days:</p>
<p>@Model.TotalDays</p>
