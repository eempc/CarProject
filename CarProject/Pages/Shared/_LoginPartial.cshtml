@using Microsoft.AspNetCore.Identity
@using CarProject.Areas.Identity.Data

@inject SignInManager<CarProjectUser> SignInManager
@inject UserManager<CarProjectUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-primary btn btn-outline-primary m-1" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
        <!--Hello @UserManager.GetUserName(User)!-->
            Account
        </a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-outline-primary text-primary w-100  m-1">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-primary btn btn-outline-primary m-1" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-primary btn btn-outline-primary m-1" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
