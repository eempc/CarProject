@page
@model CarProject.Areas.Identity.Pages.Account.Manage.MyOrdersModel
@{
    ViewData["Title"] = "My Orders Page";
    ViewData["ActivePage"] = ManageNavPages.MyOrders;
}

<h4>@ViewData["Title"]</h4>
<p>Custom stuff in here?</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].BookingId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].BookingStartDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].BookingEndDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].PricePaid)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.Booking[0].PaymentConfirmed)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.Booking[0].Vehicle)
            </th>
            <th class="hidden"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Booking) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingStartDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingEndDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePaid)
                </td>
                <td class="hidden">
                    @Html.DisplayFor(modelItem => item.PaymentConfirmed)
                </td>
                <td class="hidden">
                    @Html.DisplayFor(modelItem => item.Vehicle.RegistrationMark)
                </td>
                <td class="hidden">
                    <a asp-page="./Edit" asp-route-id="@item.BookingId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.BookingId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.BookingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>