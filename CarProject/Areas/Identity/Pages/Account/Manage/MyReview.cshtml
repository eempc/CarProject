@page
@model CarProject.Areas.Identity.Pages.Account.Manage.MyReviewModel
@{
    ViewData["Title"] = "My Review Page";
    ViewData["ActivePage"] = ManageNavPages.MyReview;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-sm">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--
                <div class="form-group">
                    <label asp-for="UserReview.DateCreated" class="control-label"></label>
                    <input asp-for="UserReview.DateCreated" class="form-control" />
                    <span asp-validation-for="UserReview.DateCreated" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserReview.OwnerId" class="control-label"></label>
                    <select asp-for="UserReview.OwnerId" class ="form-control" asp-items="ViewBag.OwnerId"></select>
                </div>
            -->
            <input asp-for="UserReview.OwnerId" class="form-control" type="hidden" readonly />

            <div class="form-group">
                <label asp-for="UserReview.ReviewTitle" class="control-label"></label>
                <input asp-for="UserReview.ReviewTitle" class="form-control" />
                <span asp-validation-for="UserReview.ReviewTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserReview.ReviewDescription" class="control-label"></label>
                <textarea asp-for="UserReview.ReviewDescription" rows="6" class="form-control"></textarea>
                <span asp-validation-for="UserReview.ReviewDescription" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="UserReview.Rating" class="control-label"></label>
                <input asp-for="UserReview.Rating" class="form-control" />
                <span asp-validation-for="UserReview.Rating" class="text-danger"></span>
            </div>
                -->
            <div class="star-rating">
                @for (int i = 5; i > 0; i--) {
                <div>
                    @{string idName = "rating" + i.ToString();}
                    <input id="@idName" type="radio" asp-for="UserReview.Rating" value="@i" />
                    <label for="@idName" class="star-radio-label">
                        @for (int j = 0; j < i; j++) {
                            <span>&#9733;</span>
                        }
                    </label>
                </div>
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>